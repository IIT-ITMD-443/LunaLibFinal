{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.6.77/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('MSSQL_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api",
      "request-body-strict": false
    },
    "graphql": {
      "enabled": false,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "cors": {
        "origins": [],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    },
    "cache": {
      "enabled": true
    }
  },
  "entities": {
    "Users": { 
    "source": "Users", 
    "permissions": [ 
      { "role": "anonymous", "actions": ["read","create","update","delete"] } 
      ] 
    }, 
    "Books": { 
      "source": "Books", 
      "permissions": [ 
        { "role": "anonymous", "actions": ["read","create","update","delete"] } 
      ] 
    }, 
    "Collections": { 
      "source": "Collections", 
      "permissions": [ 
        { "role": "anonymous", "actions": ["read","create","update","delete"] } 
      ] 
    }, 
    "CollectionBooks": { 
      "source": "CollectionBooks", 
      "permissions": [ 
        { "role": "anonymous", "actions": ["read","create","update","delete"] } 
      ] 
    } 
  }
}